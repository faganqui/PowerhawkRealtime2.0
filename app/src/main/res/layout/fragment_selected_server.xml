<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_margin="25dp"
    android:id="@+id/selected_server_fragment_id"
    tools:context="informationaesthetics.com.powerhawkrealtime.Fragments.SelectedServerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border">

        <TableRow
            android:background="@color/grey_accent_light"
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:layout_height="50dp"
                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:text="@string/units_header"
                android:layout_weight="3"
                android:textSize="24sp"/>

            <TextView
                android:layout_height="50dp"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal"
                android:text="@string/wattsreceived"
                android:id="@+id/hours_header_sel_server"
                android:layout_weight="1"
                android:textSize="14sp"/>

            <TextView
                android:layout_height="50dp"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal"
                android:text="@string/watts"
                android:id="@+id/x_header_sel_server"
                android:layout_weight="1"
                android:textSize="14sp"/>

        </TableRow>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/stealthBomber">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/stealthBomber"
                android:id="@+id/units_table">
                <TableRow
                    android:background="@color/grey_accent_light"
                    android:layout_margin="3dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_height="50dp"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:text="@string/units_header"
                        android:layout_weight="3"
                        android:textSize="24sp"/>

                    <TextView
                        android:layout_height="50dp"
                        android:layout_width="fill_parent"
                        android:gravity="center_horizontal"
                        android:text="@string/wattsreceived"
                        android:layout_weight="1"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_height="50dp"
                        android:layout_width="fill_parent"
                        android:gravity="center_horizontal"
                        android:text="@string/watts"
                        android:layout_weight="1"
                        android:textSize="14sp"/>

                </TableRow>
            </TableLayout>
            </ScrollView>
        <TextView
            android:id="@+id/no_units_found_text"
            android:textSize="20sp"
            android:textColor="@color/grey_accent_dark"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/no_units_blurb"
            android:visibility="gone"/>

    </TableLayout>

    </LinearLayout>

</FrameLayout>

